<resources>
    <declare-styleable name="GuitarChordView">
        <attr name="bridgeNutColor" format="color" />
        <attr name="fretMarkerColor" format="color" />
        <attr name="stringColor" format="color" />
        <attr name="fretNumberColor" format="color" />
        <attr name="stringMarkerColor" format="color" />
        <attr name="noteColor" format="color" />
        <attr name="noteNumberColor" format="color" />
        <attr name="barLineColor" format="color" />
        <attr name="mutedText" format="string" />
        <attr name="openStringText" format="string" />
        <attr name="stringAmount" format="integer" />
        <attr name="editable" format="boolean" />
        <attr name="showFingerNumbers" format="boolean" />
        <attr name="showFretNumbers" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NeedleView">
        <attr name="needleColor" format="color" />
        <attr name="smallTicksColor" format="color" />
        <attr name="bigTicksColor" format="color" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="TuningView">
        <attr name="normalTextColor" format="color" />
        <attr name="selectedTextColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="itemWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomTheme">
        <attr name="needleViewStyle" format="reference" />
        <attr name="tuningViewStyle" format="reference" />
    </declare-styleable>

</resources>